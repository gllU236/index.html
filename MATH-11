<script>
let index=0;
let lives=3;
let time=30;
let timer;
let aiUsed=false;
let score=0;

const questions=[
{q:"S·ªë nghi·ªám d∆∞∆°ng c·ªßa (1/3)^x = 9 l√†:",a:["1","2","3","0"],c:1},
{q:"Nghi·ªám c·ªßa 3^(x+1) = (1/9)^(2x) l√†:",a:["x = -1/5","x = 1/5","x = 1","x = -1"],c:0},
{q:"T·ªïng nghi·ªám c·ªßa log‚ÇÉ(x¬≤+2)=3 l√†:",a:["1","3","0","2"],c:2},
{q:"S·ªë nghi·ªám d∆∞∆°ng c·ªßa ln(x¬≤‚àí6x+7)=ln(x‚àí3) l√†:",a:["3","0","2","1"],c:3},
{q:"S·ªë nghi·ªám c·ªßa log‚ÇÅ/‚ÇÉ(x¬≤‚àí3x‚àí1)+log‚ÇÉ(2‚àíx)=0 l√†:",a:["2","1","3","0"],c:0}
];

function loadQuestion(){
 if(index>=questions.length){ win(); return; }

 clearInterval(timer);
 time=30;
 document.getElementById("time").innerText=time;
 timer=setInterval(countDown,1000);

 let q=questions[index];
 document.getElementById("question").innerText=q.q;
 document.getElementById("answers").innerHTML="";
 document.getElementById("feedback").innerText="";

 q.a.forEach((ans,i)=>{
  let b=document.createElement("button");
  b.innerText=ans;
  b.onclick=()=>checkAnswer(i);
  document.getElementById("answers").appendChild(b);
 });
}

function countDown(){
 time--;
 document.getElementById("time").innerText=time;
 if(time<=0){
  clearInterval(timer);
  loseLife("‚è∞ H·∫øt gi·ªù!");
 }
}

function loseLife(msg){
 lives--;
 document.getElementById("hearts").innerText="‚ù§Ô∏è".repeat(lives);
 document.getElementById("feedback").innerText=msg;

 if(lives<=0) setTimeout(lose,800);
 else setTimeout(loadQuestion,900);
}

function checkAnswer(c){
 clearInterval(timer);
 let q=questions[index];

 if(c===q.c){
  score+=10;
  document.getElementById("feedback").innerText="‚úÖ Ch√≠nh x√°c!";
  index++;
  setTimeout(loadQuestion,900);
 }else{
  loseLife("‚ùå Ch∆∞a ƒë√∫ng!");
 }
}

function useAI(){
 if(aiUsed) return;
 aiUsed=true;
 document.getElementById("aiBtn").disabled=true;
 document.getElementById("feedback").innerText=
 "ü§ñ G·ª£i √Ω: x√©t ƒëi·ªÅu ki·ªán x√°c ƒë·ªãnh tr∆∞·ªõc.";
}

function win(){
 document.getElementById("game").innerHTML=`
  <h1>üéâ HO√ÄN TH√ÄNH</h1>
  <p>B·∫°n ƒë√£ v∆∞·ª£t qua th·ª≠ th√°ch To√°n 11</p>
  <p><b>ƒêi·ªÉm:</b> ${score}</p>
 `;
}

function lose(){
 document.getElementById("game").innerHTML=`
  <h1>‚õî K·∫æT TH√öC</h1>
  <p>C·∫ßn √¥n l·∫°i ki·∫øn th·ª©c Logarit</p>
  <p><b>ƒêi·ªÉm:</b> ${score}</p>
 `;
}

loadQuestion();
